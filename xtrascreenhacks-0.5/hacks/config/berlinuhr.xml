<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="berlinuhr" _label="Berlin-Uhr">

  <command arg="-root"/>

  <number id="delay" type="slider" arg="-delay %"
          _label="Speed" _low-label="Slow" _high-label="Fast"
           low="0" high="100000" default="50000"
          convert="invert"/>

  <number id="size" type="slider" arg="-size %"
          _label="Size of clock" _low-label="Small" _high-label="Large"
          low="0" high="10" default="10"/>

  <boolean id="fog"    _label="Fog"   arg-set="-fog"/>
  <boolean id="showfps" _label="Show Frames-per-Second" arg-set="-fps"/>
  <boolean id="mono" _label="Mono (Greyscale)" arg-set="-mono"/>

  <_description>
The Berlin Quantity Didactics Clock,
invented by Dieter Binninger.
Each lamp in the top row denotes five hours;
the second row, one hour;
the third row, five minutes;
the bottom row, one minute.

Written by Kelley Nielsen 2009.
  </_description>
</screensaver>


